{% extends 'base.html.twig' %}

{% block title %}Team-mate - Articles
{% endblock %}

{% block body %}


	<div class="container mt-5">

		{% for message in app.flashes('success') %}
			<div class="alert alert-dismissible alert-success">
				{{ message }}
			</div>
		{% endfor %}
		{% if not articles.items is same as([])%}
			<h1 class='text-white '>Mes articles</h1>

			<a href="{{path('article.new')}}" class="btn btn-success">Créer un article</a>

			<div class=" count mt-4 p-3 bg-success text-white rounded mb-3">


				<p>il y a
					{{ articles.getTotalItemCount }}
					articles au total.</p>
			</div>
			<table
				class="table table-hover table-dark border-2   dd_table_article">
				{# total items count #}
				<thead>
					<tr>
						<th scope="col">Numéro</th>
						<th scope="col">Titre</th>
						<th scope="col">Description</th>
						<th scope="col">Date de création</th>
						<th scope="col">Edition</th>
						<th scope="col">Suppression</th>
					</tr>
				</thead>
				<tbody>
					{% for article in articles %}
						<tr class="table-secondary bg-opacity-25 border-2 border-white">
							<th scope="row">{{article.id}}</th>
							<td>{{article.title}}</td>
							<td>{{article.content}}</td>
							<td>{{article.createdAt|date("d/m/Y")}}</td>
							<td>
								<a href="{{path('article.edit', {id: article.id})}}" class="btn btn-success">Editer</a>
							</td>
							<td>
								<a href="{{path('article.delete', {id: article.id})}}" class="btn btn-danger">Supprimer</a>
							</td>
						</tr>
					{% endfor %}
				</tbody>
			</table>
			<div class="navigation d-flex justify-content-center dd_pag_index">
				{{ knp_pagination_render(articles) }}

			</div>
		{% else %}
			<h4>
				Il n'y a pas d'article
			</h4>
		{% endif %}
	</div>
{% endblock %}
