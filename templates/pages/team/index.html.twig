{% extends 'base.html.twig' %}

{% block title %}Team-mate - Teams
{% endblock %}

{% block body %}


	<div class="container mt-5">

		{% for message in app.flashes('success') %}
			<div class="alert alert-dismissible alert-success">
				{{ message }}
			</div>
		{% endfor %}
		{% for message in app.flashes('danger') %}
			<div class="alert alert-dismissible alert-danger">
				{{ message }}
			</div>
		{% endfor %}
		{% for message in app.flashes('warning') %}
			<div class="alert alert-dismissible alert-warning">
				{{ message }}
			</div>
		{% endfor %}


		{% if not teams.items is same as([])%}
			<h1 class='text-white '>Les teams</h1>
			{% if app.user %}
				<a href="{{path('team.new')}}" class="btn btn-success">Créer une team</a>
			{% endif %}

			<div class=" count mt-4 p-3 bg-success text-white rounded mb-3">


				<p>il y a
					{{ teams.getTotalItemCount }}
					teams au total.</p>
			</div>

			{# total items count #}


			{% for team in teams %}
				<div class="  d-inline-flex align-items-center my-3 ">
					<div class="row g-0 ">
						<div class="card border-danger bg-opacity-50 text-white  bg-secondary bg-gradient " style="max-width: 20rem; height:auto">
							<img class="card-img-top" src="/img/girlfit.jpg" alt="Card image cap">
							<div class="card-body">
								<h5 class="card-title text-center">{{team.name}}</h5>
								<p class="card-text">{{team.description[:90] ~ '...'}}</p>
								<p class="card-text">Difficulté :
									{%if team.difficulty is null%}
										N.A
									{% else %}
										{{team.difficulty}}
									{% endif %}
								</p>
								<p class="card-text">Nombre de personne :
									{%if team.NbPeople is null%}
										N.A
									{% else %}
										{{team.NbPeople}}
									{% endif %}
								</p>
								<p class="card-text">Temps :
									{%if team.time is null%}
										N.A
									{% else %}
										{{team.time}} minutes
									{% endif %}
								</p>
								<p class="card-text">{{team.createdAt|date("d/m/Y")}}</p>
								<a href="{{path('team.show', {id: team.id})}}" class="btn btn-success col-12">Voir</a>
								{% if app.user and team.user == app.user %}
									<div class=" mt-3">
										<a href="{{path('team.edit', {id: team.id})}}" class="btn btn-warning text-dark col-12">Editer</a>
									</div>
									<div class="mt-3  text-center">
										<a href="{{ path('team.delete', {id: team.id}) }}" title="Attention suppression définitive" class="btn btn-danger col-12">Supprimer
										</a>
										<p class="dd_delete_team text-secondary text-center">Attention suppression définitive</p>

									</div>
								{% endif %}
							</div>
						</div>
					</div>
				</div>


			{% endfor %}


			<div class="navigation d-flex justify-content-center dd_pag_team">
				{{ knp_pagination_render(teams) }}

			</div>
		{% else %}
			<h4>
				Il n'y a pas de team disponible .
			</h4>
		{% endif %}
	</div>
{% endblock %}
